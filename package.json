{
  "name": "bolt",
  "main": "./index",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.1.0"
  },
  "scripts": {
    "start": "expo start",
    "prebuild:clean": "npx expo prebuild --clean",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "web:export": "npx expo export --platform web",
    "web:serve": "npx serve dist",
    "server:local": "node local-server.ts",
    "server:deploy": "vercel deploy",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "adb": "adb reverse tcp:9090 tcp:9090 && adb reverse tcp:3000 tcp:3000 && adb reverse tcp:9001 tcp:9001 && adb reverse tcp:8081 tcp:8081",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint . --fix --ext .js,.ts,.tsx",
    "lint:check": "eslint . --ext .js,.ts,.tsx",
    "typeCheck": "tsc --noEmit",
    "prepare": "husky",
    "build-local": "eas build --profile preview --platform android",
    "build-local-dev-android": "eas build --profile development --platform android",
    "build-local-dev-ios-simulator": "eas build --profile development-simulator --platform ios",
    "full-test": "npm run test:ci && npm run format && npm run format:check && npm run lint && npm run typeCheck"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/test/__mocks__/svgMock.js"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx, js, jsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.{js, ts}",
      "!**/jest.setup.{js, ts}"
    ]
  },
  "dependencies": {
    "@expo/config-plugins": "~8.0.0",
    "@expo/react-native-action-sheet": "^4.1.0",
    "@expo/vector-icons": "^14.0.2",
    "@gorhom/bottom-sheet": "^4.6.4",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/netinfo": "11.3.1",
    "@react-navigation/drawer": "^6.7.0",
    "@react-navigation/elements": "^1.3.31",
    "@react-navigation/native": "^6.0.2",
    "@tanstack/react-query": "^5.50.1",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "expo": "~51.0.31",
    "expo-constants": "~16.0.2",
    "expo-dev-client": "~4.0.26",
    "expo-device": "~6.0.2",
    "expo-font": "~12.0.10",
    "expo-haptics": "~13.0.1",
    "expo-image": "~1.13.0",
    "expo-linking": "~6.3.1",
    "expo-localization": "~15.0.3",
    "expo-network": "~6.0.1",
    "expo-router": "~3.5.23",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-updates": "~0.25.24",
    "expo-web-browser": "~13.0.3",
    "i18n-js": "^4.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@tanstack/eslint-plugin-query": "^5.50.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.7.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "compression": "^1.7.4",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-universe": "^13.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-testing-library": "^6.3.0",
    "expo-atlas": "^0.3.0",
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.4",
    "morgan": "^1.10.0",
    "prettier": "^3.3.2",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "18.2.0",
    "reactotron-react-js": "^3.3.15",
    "reactotron-react-native": "^5.1.7",
    "reactotron-react-query": "^1.0.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "private": true
}
